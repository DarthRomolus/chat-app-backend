generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model TestModel {
  id        String    @id @default(uuid())
  name      String
  value     Int       @default(0)
  createdAt DateTime  @default(now())
}
model User{
  id       String @id @default(uuid())
  name     String
  password String @unique
  messages  Message[]
  chats     Chat[]
}
model Message{
  id        String    @id @default(uuid())
  data      String
  createdAt DateTime

  author    User      @relation(fields: [authorID], references: [id])
  authorID  String

  chat      Chat    @relation(fields: [chatID],references: [id])
  chatID    String  
}
model Chat{
  id       String @id @default(uuid())
  name     String

  messages Message[]
  participants User[]
}